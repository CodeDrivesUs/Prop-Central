<div class="modal fade" id="Updateprofile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.UserId)
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update Profile</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div id="fine-uploader"></div>
                        <label>Profile Picture</label>
                        <input type="hidden" id="ImageUrl" name="ImageUrl" />
                    </div>
                    <div class="form-group">
                        <label>Bio</label>
                        <textarea class="form-control" name="Bio" rows="4">@Model.Bio</textarea>
                    </div>
                    <div class="form-group">
                        <label>Home Town</label>
                        <input type="text" class="form-control" name="HomeTown" value="@Model.HomeTown" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-primary" value="Update" />
                </div>
            </form>
        </div>
    </div>
</div>
