    <script>
        $(function () {

            window.setInterval(function () {
                var data = new FormData;

                data.append("user", "test")

                $.ajax({
                    type: "post",
                    url: "/Messages/Count",
                    data: data,
                    contentType: false,
                    processData: false,
                    error: function () {

                    },
                    success: function (response) {
                        if (parseInt(response) != 0) {
                            document.getElementById("count").innerHTML = response;
                        }
                    }
                })

            }, 1000);
        });
    </script>
