@model Flats.SharedModel.SharedModels.Pagination

<div class="col-lg-12">
    <div class="more_place_btn text-center">
        <nav aria-label="Page navigation example">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="pagination">
                        @if (Model._current == 1)
                        {
                            <li class="page-item disabled"><a class="page-link disabled" href="#">Previous</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href='@Url.Action("Pagination", "Home", new { page = (Model._current-1) })'>Previous</a></li>
                        }
                        @for (int i = 1; i <= Model._final; i++)
                        {
                            if (i == Model._current)
                            {
                                <li class="page-item active"><a class="page-link" href='@Url.Action("Pagination", "Home", new { page = i })'>@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href='@Url.Action("Pagination", "Home", new { page = i })'>@i</a></li>
                            }
                        }
                        @if (Model._current == Model._count)
                        {
                            <li class="page-item disabled"><a class="page-link disabled" href="#">Next</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href='@Url.Action("Pagination", "Home", new { page = (Model._current + 1) })'>Next</a></li>
                        }
                    </ul>

                </div>
                <div class="col-lg-6">
                    <p class="text-center" style="margin-top:17px;">
                        Showing Results from  @Model._from to @Model._to of  @Model._count                        
                    </p>
                </div>
            </div>
        </nav>
    </div>
</div>

