@model Flats.SharedModel.FlatSharedModels.FlatViewModel
@using System.Configuration

<div class="col-lg-4 col-md-6">
    <div class="single_place">
        <div class="thumb">

            <img src="@ConfigurationManager.AppSettings["photosuploadUrl"]@Model.ImageUrl" alt="" height="240">
            <a href="/Home/ViewFlat?FlatId=@Model.Id" class="prise">R @Model.RentingPrice</a>
        </div>
        <div class="place_info">
            <a href="/flats/View?id=@Model.Id"><h3>@Model.Name flatnamr</h3></a>
            <p><i class="glyphicon glyphicon-map-marker text-danger"></i> @*<span>@item.getlocation(item.Flatid)</span>*@Berea </p>
            <div class="rating_days d-flex justify-content-between">
                <span class="d-flex justify-content-center align-items-center">
                    <i class="fa fa-star"></i>
                    <a href="#">@*@item.countstars(item.Flatid)*@</a>
                </span>
                <div class="days">
                    <i class="fa fa-clock-o"></i>
                    <a href="#">5 Days</a>
                </div>
            </div>
        </div>
    </div>
</div>
